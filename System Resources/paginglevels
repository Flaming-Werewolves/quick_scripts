; sleep $T; vmstat -s ) | awk -v T="$T" -F'[(/)]' '/pages paged in/{ pgpio=pgpin; pgpin=$1 } /pages paged out/{ pgpoo=pgpon; pgpon=$1 } /pages swapped in/{ pgsio=pgsin; pgsin=$1 } /pages swapped out/{ pgsoo=pgson; pgson=$1 } END { printf "== Current %i second intervals ==\nPaged in:    %6.0f = %6.3f KB/s\nPaged out:   %6.0f = %6.3f KB/s\nSwapped in: %6.0f = %6.3f KB/s\nSwapped out: %6.0f = %6.3f KB/s\n", T, pgpin-pgpio, ((pgpin-pgpio)*4)/T, pgpon-pgpoo, ((pgpon-pgpoo)*4)/T, pgsin-pgsio, ((pgsin-pgsio)*4)/T, pgson-pgsoo, ((pgson-pgsoo)*4)/T}';
